{{!< default}}
{{> header}}
<main class="main_DarkCherry">


{{#foreach posts}}
    <article class="article_uber" role="article" itemscope itemtype="http://schema.org/Article">
      <header class="postHeader_DarkCherry">
          <time class="date_uber" datetime="{{date format="YYYY-MM-DD"}}" itemprop="datePublished">{{date format='dddd DD MMM YYYY'}}</time>
          <h1 class="posttitle_uber" itemprop="headline">
              <a href="{{{url}}}" rel="bookmark">{{title}}</a>
          </h1>


      </header>
      <div class="postcontent_DarkCherry" itemprop="articleBody">
      {{content}}
    </div>
      {{#if tags}}
      <div class="posttags_DarkCherry">
          Tags: {{tags separator=" | "}}
        </div>
      {{/if}}
    </article>
{{/foreach}}
{{#if pagination}}
  <div class="pagination_DarkCherry">
    {{{pagination}}}
  </div>
{{/if}}

</main>
{{>footer}}
